
<%= form_for(:session, url: sessions_path,:html=>{:class=>'form-signin', :id=> "signin_form"})  do |f|%>
<h2 class="form-signin-heading">Please Sign in</h2>

<% unless notice.nil? %>
<div id="signin_error" class="alert alert-error" > <a href="#" class="close">&times;</a><%= notice %></div>
<%else%>
  <div id="signin_error" class="alert alert-error" style="display: none"> <a href="#" class="close">&times;</a><%= notice %></div>		
<%end%>
  <div class="field"> 
    <%= f.email_field :email, :class => "input-block-level",:placeholder=>"Email address", :required=> true%>
  </div>
  <div class="field">   
    <%= f.password_field :password, :class => "input-block-level",:placeholder=>"Password", :required=> true%>

  </div>
 
  <div class="actions">
    <%= f.submit 'Sign In',:class=>"btn btn-large btn-primary"%>&nbsp;&nbsp;&nbsp;<div id="forgot_password"><a href="/users/forgot_password">forgot password</a></div>
  </div>
<% end %>

