
<%= form_for(:session, url: sessions_path,:html=>{:class=>'form-signin'})  do |f|%>
<h2 class="form-signin-heading">Please Sign in</h2>
  <p id="error_notice"><%= notice %></p>		
  <div class="field"> 
    <%= f.text_field :email, :class => "input-block-level",:placeholder=>"Email address"%>
  </div>
  <div class="field">   
    <%= f.password_field :password, :class => "input-block-level",:placeholder=>"Password"%>

  </div>
 
  <div class="actions">
    <%= f.submit 'Sign In',:class=>"btn btn-large btn-primary"%>&nbsp;&nbsp;&nbsp;<div id="forgot_password"><a href="/users/forgot_password">forget password</a></div>
  </div>
<% end %>

